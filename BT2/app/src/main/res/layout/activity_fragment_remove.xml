<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    tools:context=".FragmentRemove.FragmentRemoveActivity">

    <Button
        android:id="@+id/btFragAddA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="AddA"
        android:padding="4dp"
        android:text="Add A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btFragAddB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="AddB"
        android:padding="4dp"
        android:text="Add B"
        app:layout_constraintStart_toEndOf="@id/btFragAddA"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btFragAddC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="AddC"
        android:padding="4dp"
        android:text="Add C"
        app:layout_constraintStart_toEndOf="@id/btFragAddB"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btFragBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="Back"
        android:padding="4dp"
        android:text="Back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btRemoveA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="RemoveA"
        android:padding="4dp"
        android:text="Remove A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btFragAddA" />

    <Button
        android:id="@+id/btRemoveB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="RemoveB"
        android:padding="4dp"
        android:text="Remove B"
        app:layout_constraintStart_toEndOf="@id/btRemoveA"
        app:layout_constraintTop_toBottomOf="@id/btFragAddB" />

    <Button
        android:id="@+id/btRemoveC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="RemoveC"
        android:text="Remove C"
        app:layout_constraintStart_toEndOf="@id/btRemoveB"
        app:layout_constraintTop_toBottomOf="@id/btFragAddC" />

    <Button
        android:id="@+id/btPop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="Pop"
        android:padding="4dp"
        android:text="POP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btFragBack" />

    <FrameLayout
        android:id="@+id/frameRemove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btRemoveB"
        tools:layout_editor_absoluteX="4dp">

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>